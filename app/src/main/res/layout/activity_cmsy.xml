<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:paddingTop="@dimen/activity_vertical_margin"

    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"

            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/ireturn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@drawable/ic_return"></Button>

            <TextView
                style="@style/txt_samll_mid_bold"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"

                android:text="@string/cm"

                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.7"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"


            tools:ignore="MissingConstraints">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/txt_samll_left_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ycl" />


                <TextView
                    style="@style/txt_samll_right"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="@string/cklb"
                    android:textColor="#48C19E"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/common_icon_next" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:background="@drawable/solid_8dp_w">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"

                    android:layout_weight="1">
                   <ImageView

                       android:layout_marginTop="5dp"
                       android:layout_width="40dp"
                       android:layout_height="40dp"

                       android:layout_marginLeft="40dp"
                       android:src="@drawable/pic_icon_time"
                       />

                    <TextView

                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="85dp"
                        android:layout_alignParentTop="true"
                        android:text="123"
                        android:textSize="18sp"
                        />

                    <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="85dp"
                     android:layout_alignParentBottom="true"
                     android:text="@string/dkk"
                     android:textSize="11sp"
                     />


                </RelativeLayout>


                 <ImageView
                     android:layout_width="1dp"
                     android:layout_height="40dp"
                     android:background="#EBF9F6"
                     />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1">
                    <ImageView

                        android:layout_marginTop="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:layout_marginLeft="40dp"
                        android:src="@drawable/pic_icon_area"
                        />

                    <TextView
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="85dp"
                        android:layout_alignParentTop="true"
                        android:text="123"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="85dp"
                        android:layout_alignParentBottom="true"
                        android:text="@string/mjm"
                        android:textSize="11sp"
                        />
                </RelativeLayout>
            </LinearLayout>

             <TextView
                 android:id="@+id/t1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/l1"
                 android:layout_marginTop="24dp"
                 style="@style/txt_samll_left_16"
                 android:text="@string/qxzcmfs"
                 />
            <RelativeLayout
                android:id="@+id/r1"
                android:layout_below="@+id/t1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/solid_cmb"
                android:layout_height="90dp">
                <ImageView
                    android:layout_width="124dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cm_bj"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_samll_left_16"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/czsb"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_sy_num_small"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="48dp"
                    android:text="@string/czsbmes"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r2"
                android:layout_below="@+id/r1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/solid_cmb"
                android:layout_height="90dp">
                <ImageView
                    android:layout_width="124dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cm_bj_1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_samll_left_16"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/rdcl"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_sy_num_small"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="48dp"
                    android:text="@string/rdclmes"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r3"
                android:layout_below="@+id/r2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/solid_cmb"
                android:layout_height="90dp">
                <ImageView
                    android:layout_width="124dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cm_bj_2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_samll_left_16"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/hdk"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_sy_num_small"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="48dp"
                    android:text="@string/hdkmes"
                    />

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
