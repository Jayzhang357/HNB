<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:paddingTop="@dimen/activity_vertical_margin"

    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"


            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/ireturn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@drawable/ic_return"></Button>

            <TextView
                style="@style/txt_samll_mid_bold"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"

                android:text="@string/zbjl"

                />

            <Spinner
                android:id="@+id/dropdown_menu"
                android:layout_width="120dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:background="@drawable/ic_selector_w"
                android:dropDownVerticalOffset="30dp"
                android:popupBackground="@drawable/layer_list_background"></Spinner>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.3"


            tools:ignore="MissingConstraints">

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"

                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"

                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"

                    android:background="@drawable/dill_income_bj"
                    tools:ignore="MissingConstraints">

                    <TextView
                        style="@style/txt_income"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:text="@string/zjsr"

                        />

                    <TextView
                        style="@style/txt_income_content"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:text="@string/zjsr"

                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/dill_pay_bj"

                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <TextView
                        style="@style/txt_income"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:text="@string/zjzc"

                        />

                    <TextView
                        style="@style/txt_income_content"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:text="@string/zjzc"

                        />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/biaoti"
                style="@style/txt_left_14_re_b"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="107dp"
                android:layout_weight="1"
                android:background="@color/grayd"
                android:paddingLeft="16dp"

                />

            <LinearLayout

                android:layout_below="@+id/biaoti"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/projectgd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:cacheColorHint="#00000000"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:descendantFocusability="blocksDescendants"
                    android:fadingEdge="none"
                    android:focusable="true"
                    android:scrollingCache="false">

                </ListView>
            </LinearLayout>
            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/dill_btn_add" />

        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
