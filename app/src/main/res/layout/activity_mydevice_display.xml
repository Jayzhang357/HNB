<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <ImageView

                    android:layout_width="match_parent"

                    android:layout_height="10dp"

                    android:background="@color/line_grenen" />
            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/point_host" />

                    <TextView

                        android:id="@+id/devicename"
                        style="@style/txt_samll_left_16"
                        android:layout_width="202dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:text="@string/save" />

                    <TextView

                        android:id="@+id/typename"
                        style="@style/txt_rightsamll"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:text="@string/save" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/line"
                    android:layout_width="match_parent"

                    android:layout_height="1dp"
                    android:layout_marginTop="9dp"
                    android:background="@color/line_grenen" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/carnumber"
                        style="@style/txt_samll_left_t"
                        android:layout_width="220dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="30dp"
                        android:text="@string/save" />

                    <TextView
                        android:id="@+id/stlyecar"
                        style="@style/txt_rightsamll"
                        android:layout_width="120dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:text="@string/save" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/typecar"
                        style="@style/txt_zbxq_bt"
                        android:layout_width="180dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="30dp"
                        android:text="@string/save" />

                    <TextView
                        android:id="@+id/date"
                        style="@style/txt_zbxq_bt_right"
                        android:layout_width="200dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:text="@string/save" />

                </RelativeLayout>
            </LinearLayout>
            </LinearLayout>

          <!--  <Button
                android:id="@+id/delte"
                style="@style/txt_minsamll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/origen"
                android:text="@string/jb"
                android:textColor="@color/white"></Button>-->

        </LinearLayout>


</LinearLayout>